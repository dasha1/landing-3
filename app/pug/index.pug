                li.layer.rocket-right(data-depth="0.80")
                    img(src=imgPath+"rocket-right.png")
                li.layer.rocket-left(data-depth="0.80")
                    img(src=imgPath + "rocket-left.png")
                li.order-form.layer(data-depth="0.02")
                    .order-blank
                        h1 РАСЧЕТ СТОИМОСТИ
                        .row
                            .col-lg-6.col-md-12.col-sm-12.col-xs-12
                                input(type="text" placeholder="Ваше имя")
                                input(type="text" placeholder="Контактный телефон")
                                input(type="text" placeholder="E-mail")
                                input(type="text" placeholder="Ссылка на сайт")
                            .col-lg-6.col-md-12.col-sm-12.col-xs-12
                                .keywords
                                    input(type="textarea"  placeholder="Ключевые слова, время показа и пр.")
                                .button-rocket
