                        h3 БЫСТРО, НАДЕЖНО, ЭФФЕКТИВНО
                    .top-img.col-lg-5.col-md-6.col-sm-12
                        img(src=imgPath + "rocket.png")
        section#features
            .container
                .row
                    .feature-img.col-lg-6.col-md-6.col-sm-6.col-xs-12
                        img(src=imgPath+"google-img.png")
